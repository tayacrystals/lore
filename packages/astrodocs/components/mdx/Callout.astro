---
interface Props {
  type?: "note" | "warning" | "tip" | "danger";
  title?: string;
}

const { type = "note", title } = Astro.props;

const config = {
  note: {
    bg: "bg-blue-500/5 dark:bg-blue-500/10",
    border: "border-blue-500/20",
    iconColor: "text-blue-500",
    defaultTitle: "Note",
    iconPath: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  warning: {
    bg: "bg-amber-500/5 dark:bg-amber-500/10",
    border: "border-amber-500/20",
    iconColor: "text-amber-500",
    defaultTitle: "Warning",
    iconPath: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z",
  },
  tip: {
    bg: "bg-emerald-500/5 dark:bg-emerald-500/10",
    border: "border-emerald-500/20",
    iconColor: "text-emerald-500",
    defaultTitle: "Tip",
    iconPath: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
  },
  danger: {
    bg: "bg-red-500/5 dark:bg-red-500/10",
    border: "border-red-500/20",
    iconColor: "text-red-500",
    defaultTitle: "Danger",
    iconPath: "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
};

const c = config[type];
---

<div class={`my-4 flex gap-3 rounded-lg border ${c.border} ${c.bg} px-4 py-3`}>
  <svg class={`w-5 h-5 shrink-0 mt-0.5 ${c.iconColor}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path d={c.iconPath} />
  </svg>
  <div class="min-w-0 flex-1">
    {title && <p class={`font-medium text-sm mb-1 ${c.iconColor}`}>{title}</p>}
    <div class="text-sm text-fd-foreground/90 [&>p]:mb-1 [&>p:last-child]:mb-0">
      <slot />
    </div>
  </div>
</div>
