---
import ThemeToggle from "./ThemeToggle.astro";
import MobileMenu from "./MobileMenu.astro";
import { topNav } from "../../data/navigation";
---

<header
  class="sticky top-0 z-40 w-full border-b border-fd-border bg-fd-background/80 backdrop-blur-lg"
>
  <div class="mx-auto max-w-360 flex h-16 items-center justify-between px-4 lg:px-8">
    <!-- Logo -->
    <div class="flex items-center gap-6">
      <a href="/" class="flex items-center gap-2 font-semibold text-lg">
        <div class="w-7 h-7 rounded-md bg-fd-primary flex items-center justify-center">
          <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
            <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <span>AstroDocs</span>
      </a>

      <!-- Desktop nav -->
      <nav class="hidden md:flex items-center gap-1">
        {
          topNav.map((link) => (
            <a
              href={link.href}
              class="px-3 py-1.5 text-sm text-fd-muted-foreground hover:text-fd-foreground transition-colors rounded-md hover:bg-fd-muted"
            >
              {link.label}
            </a>
          ))
        }
      </nav>
    </div>

    <!-- Right side -->
    <div class="flex items-center gap-1">
      <!-- Search button -->
      <button
        id="search-trigger"
        class="hidden sm:flex items-center gap-2 text-sm text-fd-muted-foreground hover:text-fd-foreground bg-fd-muted hover:bg-fd-accent rounded-lg px-3 py-1.5 transition-colors border border-fd-border"
      >
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
        <span>Search docs...</span>
        <kbd class="hidden lg:inline-flex items-center gap-0.5 rounded border border-fd-border bg-fd-background px-1.5 py-0.5 text-[10px] font-mono text-fd-muted-foreground">
          <span class="text-xs">âŒ˜</span>K
        </kbd>
      </button>

      <!-- Mobile search -->
      <button
        id="search-trigger-mobile"
        class="sm:hidden inline-flex items-center justify-center w-9 h-9 rounded-md hover:bg-fd-muted transition-colors"
        aria-label="Search"
      >
        <svg class="w-4.5 h-4.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.3-4.3"></path>
        </svg>
      </button>

      <ThemeToggle />

      <!-- GitHub link -->
      <a
        href="https://github.com"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center w-9 h-9 rounded-md hover:bg-fd-muted transition-colors text-fd-muted-foreground hover:text-fd-foreground"
        aria-label="GitHub"
      >
        <svg class="w-4.5 h-4.5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
        </svg>
      </a>

      <MobileMenu />
    </div>
  </div>
</header>
