---
interface Props {
  label: string;
  href: string;
  active: boolean;
}

const { label, href, active } = Astro.props;
---

<a
  href={href}
  class:list={[
    "flex items-center gap-2 px-2 py-1.5 text-[13px] rounded-md transition-colors",
    active
      ? "bg-fd-primary/10 text-fd-primary font-medium"
      : "text-fd-muted-foreground hover:text-fd-foreground hover:bg-fd-muted/60",
  ]}
  aria-current={active ? "page" : undefined}
>
  <svg class="w-3.5 h-3.5 shrink-0 opacity-60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5.586a1 1 0 0 1 .707.293l5.414 5.414a1 1 0 0 1 .293.707V19a2 2 0 0 1-2 2z" />
  </svg>
  {label}
</a>
